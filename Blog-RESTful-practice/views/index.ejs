<% include partials/header %>

<div class="container-fluid">
    <div class="row mb-2">
        <% postList.forEach(post => { %>
        
        <div class="col-md-6">
            <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <h3 class="mb-0">
                <a class="text-dark" href="/blog/<%= post.id%>"><%= post.title%></a>
                </h3>
                <p class="card-text mb-auto"><%- truncate(post.content, 75)%></p>
                <a href="/blog/<%= post.id%>">Continue reading</a>
            </div>
            <img class="card-img-right flex-auto d-none d-md-block"  alt="Thumbnail [200x250]"  src="<%= post.image%>" data-holder-rendered="true">
            </div>
        </div>

        <% }); %>
    </div>

</div>
    




<% include partials/footer %>


