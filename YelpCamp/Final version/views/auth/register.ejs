<% include ../partials/header %>

<div class="container">
    <h2 class="text-center">Create a new account</h2>
    <div class='container_form'>
        <form action="/register" method="post">
            <div class="form-group">
              <label for="username">Your email</label>
              <input type="email" name="username" id="username" class="form-control" placeholder="Type your email" aria-describedby="Type your email">
              <small id="Type your email" class="text-muted">Write your email to register an account</small>
            </div>
            <div class="form-group">
              <label for="fullName">Your Name</label>
              <input type="text" name="fullName" id="fullName" class="form-control" placeholder="type your name" aria-describedby="fullName">
              <small id="fullName" class="text-muted">Write your full name</small>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" id="password" placeholder="type a passwrod">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
    </div >
</div>



<% include ../partials/footer %>